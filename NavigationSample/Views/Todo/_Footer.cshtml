@model TodoModel
<footer>
    <span>
        <strong>@Model.ItemsLeft</strong>
        @(Model.ItemsLeft != 1 ? "items" : "item") left
    </span>
    <ul>
        <li>@Html.RefreshLink("All", new NavigationData { { "id", "" }, { "mode", "all" } })</li>
        <li>@Html.RefreshLink("Active", new NavigationData { { "id", "" }, { "mode", "active" } })</li>
        <li>@Html.RefreshLink("Completed", new NavigationData { { "id", "" }, { "mode", "completed" } })</li>
    </ul>
    @if (Model.CompletedCount > 0) {
        using (Html.BeginRefreshForm(null, true)) {
            <button name="action" value="clearCompleted">Clear completed @Model.CompletedCount</button>
        }
    }
</footer>
