@model TodoModel
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Navigation • TodoMVC</title>
</head>
<body>
    <section>
        <header>
            <h1>todos</h1>
            @using (Html.BeginRefreshForm(null, true)) {
                @Html.TextBoxFor(m => m.NewTitle, new { placeholder = "What needs to be done?", autofocus = "autofocus" })
                <input type="hidden" name="action" value="add" />
            }
        </header>
        <section>
            @using (Html.BeginRefreshForm(null, true)) {
                if (Model.ItemsLeft == 0) {
                    <button name="action" value="activateAll">Mark all as active</button>
                }
                else {
                    <button name="action" value="completeAll">Mark all as complete</button>
                }
            }
            <ul id="todo-list">
                @foreach (var todo in Model.Todos) {
                    <li>@Html.Partial("_Item", todo)</li>
                }
            </ul>
        </section>
        @Html.Partial("_Footer", Model)
    </section>
</body>
</html>
